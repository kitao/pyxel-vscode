{
  "name": "pyxel-vscode",
  "displayName": "Pyxel",
  "description": "Run Pyxel games directly in VS Code â€” no installation required",
  "version": "0.4.0",
  "publisher": "kitao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitao/pyxel-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pyxel",
    "retro",
    "game",
    "pixel-art",
    "python",
    "gamedev"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyxel.run",
        "title": "Pyxel: Run",
        "icon": "$(play)"
      },
      {
        "command": "pyxel.newResource",
        "title": "Pyxel: New Resource"
      },
      {
        "command": "pyxel.copyExamples",
        "title": "Pyxel: Copy Examples"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "pyxel.run",
          "when": "resourceExtname == .py"
        }
      ]
    },
    "keybindings": [
      { "key": "ctrl+s", "mac": "cmd+s", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyS", "key": "s" } },
      { "key": "ctrl+z", "mac": "cmd+z", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyZ", "key": "z" } },
      { "key": "ctrl+y", "mac": "cmd+y", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyY", "key": "y" } },
      { "key": "ctrl+c", "mac": "cmd+c", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyC", "key": "c" } },
      { "key": "ctrl+x", "mac": "cmd+x", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyX", "key": "x" } },
      { "key": "ctrl+v", "mac": "cmd+v", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyV", "key": "v" } },
      { "key": "ctrl+a", "mac": "cmd+a", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyA", "key": "a" } },
      { "key": "ctrl+u", "mac": "cmd+u", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyU", "key": "u" } },
      { "key": "ctrl+d", "mac": "cmd+d", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyD", "key": "d" } },
      { "key": "ctrl+shift+c", "mac": "cmd+shift+c", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyC", "key": "c", "shift": true } },
      { "key": "ctrl+shift+x", "mac": "cmd+shift+x", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyX", "key": "x", "shift": true } },
      { "key": "ctrl+shift+v", "mac": "cmd+shift+v", "command": "pyxel.forwardKey", "when": "activeWebviewPanelId == 'pyxel.view'", "args": { "code": "KeyV", "key": "v", "shift": true } }
    ],
    "customEditors": [
      {
        "viewType": "pyxel.editor",
        "displayName": "Pyxel Editor",
        "selector": [
          { "filenamePattern": "*.pyxres" }
        ],
        "priority": "default"
      },
      {
        "viewType": "pyxel.player",
        "displayName": "Pyxel Player",
        "selector": [
          { "filenamePattern": "*.pyxapp" }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.7.0"
  }
}
